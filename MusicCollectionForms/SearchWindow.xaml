<Window x:Class="MusicCollectionForms.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Album Search" Height="500" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" Width="400" VerticalContentAlignment="Center" Margin="0,0,10,0">Enter Search</TextBox>
            <Button Content="Search" Width="75" Height="25" Click="SearchButton_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="SearchDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Selected" Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                <DataGridTextColumn Header="Album" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="Link" Binding="{Binding Url}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add to Library" Width="100" Height="25" Click="AddButton_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="75" Height="25" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
