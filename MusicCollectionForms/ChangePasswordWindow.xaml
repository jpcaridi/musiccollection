<Window x:Class="MusicCollectionForms.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="250" Width="350">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Change Password" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Current Password" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="2" x:Name="CurrentPasswordBox" Height="25" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="3" Text="New Password" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="4" x:Name="NewPasswordBox" Height="25" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK" Width="75" Height="25" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="75" Height="25" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
