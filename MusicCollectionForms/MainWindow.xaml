<Window x:Class="MusicCollectionForms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Collection Admin" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="Change Password" Click="ChangePassword_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" x:Name="ContentArea">
            <Grid x:Name="LoginPanel" Visibility="Visible">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Log In" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="User Name" Margin="0,0,0,5"/>
                    <TextBox x:Name="UserNameTextBox" Width="200" Margin="0,0,0,15"/>
                    <TextBlock Text="Password" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,15"/>
                    <Button Content="Submit" Width="200" Height="30" Click="Submit_Click"/>
                    <TextBlock x:Name="LoginErrorText" Foreground="Red" Visibility="Collapsed" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

            <Grid x:Name="AdminPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                    <Button Content="Search" Width="75" Height="25" Click="Search_Click" Margin="0,0,10,0"/>
                    <Button Content="Save" Width="75" Height="25" Click="Save_Click" Margin="0,0,10,0"/>
                    <Button Content="Delete" Width="75" Height="25" Click="Delete_Click" Margin="0,0,10,0"/>
                    <Button Content="Log Off" Width="75" Height="25" Click="LogOff_Click"/>
                </StackPanel>

                <Grid Grid.Row="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Music Library" FontSize="16" Margin="0,10,0,10"/>
                    <DataGrid Grid.Row="1" x:Name="AlbumDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Album" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="*"/>
                            <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="80"/>
                            <DataGridTextColumn Header="Play Count" Binding="{Binding PlayCount}" Width="80"/>
                            <DataGridTextColumn Header="Link" Binding="{Binding Url}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
